<div class="col-xs-2"></div>
<div class="col-xs-8">
	<p class="caption"><font class="caption-font">商品一覧</font></p>
	<div>
		<div class ="col-xs-11"></div>
		<div class ="col-xs-1">
			<%= link_to "+",new_admin_item_path,class: "button-circle" %>	
		</div>
	</div>
	<table class="table table-hover table-inverse">
		<thead>
		    <tr> 
		      <th>商品ID</th>
		      <th>商品名</th>
		      <th>税抜価格</th>
		      <th>ジャンル</th>
		      <th>ステータス</th>
		    </tr>
		</thead>
		<% @items.each do |item| %>
			  <tbody>
				<tr>
					<td><%= item.id %></td>
					<td><%= item.name %></td>
					<td><%= item.price_excluding_price %></td>
					<td><%= item.genre.name %></td>
					<td>
						<% if item.sale_status == true %>
							販売中
						<% else %>
							販売停止中
						<% end %>
					</td>
				</tr>
			  </tbody>
			 <% end %>
	</table>
</div>
<div class="col-xs-2"></div>
