<div class="col-xs-1"></div>
<div class="col-xs-10">
	<p class = "caption"><font class = "caption-font">商品新規登録</font></p>
	<div class = "item-form">
		<%= form_with model: [:admin, @item] do |f| %>
			<div class="field col-xs-5">
	            <%= f.attachment_field :image, placeholder: "商品画像" %>
	        </div>
	        <div class="col-xs-5">
				<div class="field row">
					<label>商品名</label>
					<%= f.text_field :name, class:"col-xs-12 book_title", placeholder:"" %>
				</div>
				 <div class="field row">
				    <label>商品説明</label>
					<%= f.text_area :description, class:"col-xs-12 book_body", rows:"3", placeholder:"" %>
				 </div>
				 <div class="field row">
					<label>ジャンル</label>
					 <%= f.collection_select :genre_id, Genre.where(is_active: "true"), :id, :name, :prompt => "選択してください" %>
				</div>
				<div class="field row">
					<label>税抜き価格</label>
					<div class = "flex-row">
						<%= f.text_field :price_excluding_price, class:"col-xs-10", placeholder:""%><span class = "yen">円</span>
					</div>
				</div>
				<div class="field row">
					<label>販売ステータス</label>
					<label>
					<%= f.radio_button :sale_status,true, checked: true %>販売中
					</label>
					<label>
					<%= f.radio_button :sale_status,false%>売り切れ
					</label>
				</div>
				 <div class="actions row">
				 	<div class ="col-xs-7"></div>
				 	<%= f.submit "新規登録" ,class:"button col-xs-5" %>
				 </div>
			</div>
		<% end %>
	</div>
</div>
<div class="col-xs-1"></div>
