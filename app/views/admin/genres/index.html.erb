<div class="col-xs-3"></div>
<div class="col-xs-6">
    <p class = "caption"><font class = "caption-font">ジャンル一覧・追加</font></p>
    <div class = "genre-form">
        <%= form_with model: [:admin, @genre] do |f| %>
            <label>ジャンル</label>
            <%= f.text_field :name, placeholder:"" %>
            <label>
                <%= f.radio_button :is_active, true, checked: true %>有効
            </label>
            <label>
                <%= f.radio_button :is_active,false%>無効
            </label>
            <%= f.submit "追加" ,class:"button"%>
        <% end %>
    </div>
    <table class="table table-hover table-inverse">
        <thead>
            <tr> 
              <th>ジャンル</th>
              <th>状態</th>
              <th></th>
            </tr>
        </thead>
        <% @genres.each do |genre| %>
              <tbody>
                <tr>
                    <td><%= genre.name %></td>
                    <td>
                        <% if genre.is_active==true %>
                            有効
                        <% else %>
                            無効
                        <% end %>
                    </td>
                    <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class: "button" %></td>
                </tr>
              </tbody>
        <% end %>
    </table>	
</div>
<div class="col-xs-3"></div>
