<div class="col-xs-1"></div>
<div class="col-xs-10">
	<p class = "caption"><font class ="caption-font">商品一覧<font></p>
	<ul class="item-list">
		<% @items.each do |item| %>
			<% if item.genre.is_active == true %>
				<li>
					<%= link_to item_path(item.id) do %>
						<%= attachment_image_tag item, :image,format: 'jpeg', fallback: "no_image.jpg",size: "200x150"  %>
						<dl>
							<dd>商品名:<%= item.name %></dd>
							<dd class="price">¥<%= item.price_excluding_price %></dd>
						</dl>
					<% end %>
				</li>
			<% end %>
	 	<% end %>
	</ul>
</div>
<div class="col-xs-1"></div>