<!DOCTYPE html>
<html>
  <head>
    <title>ECCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse" >
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <!--<span style="color:white;font-size: 20px;"> NaganoCake</span>-->
           <li><%= link_to "NaganoCake",root_path,style:"color:white;font-size:20px"%></li>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if end_user_signed_in? %>
                <li><%= link_to "マイページ",end_user_path(current_end_user),class: "glyphicon glyphicon-home home" %></li>
                <li><%= link_to "商品一覧", items_path, class: "glyphicon glyphicon-user users" %></li>
                <li><%= link_to "カート", cart_items_path, class: "glyphicon glyphicon-book books" %></li>
                <li><%= link_to "ログアウト", destroy_end_user_session_path,class: "glyphicon glyphicon-log-out logout", method: :delete %></li>
            <% elsif signed_in? %>
                <li><%= link_to "商品一覧", admin_items_path, class: "glyphicon glyphicon-link about" %></li>
                <li><%= link_to "会員一覧", admin_end_users_path, class: "glyphicon glyphicon-user users" %></li>
                <li><%= link_to "注文履歴一覧",'#', class: "glyphicon glyphicon-book books" %></li>
                <li><%= link_to "ジャンル一覧",  admin_genres_path, class: "glyphicon glyphicon-book books" %></li>
                <li><%= link_to "ログアウト",destroy_admin_admin_session_path,class: "glyphicon glyphicon-log-out logout", method: :delete %></li> 
            <% else %>
              <li><%= link_to "商品一覧",items_path, class: "glyphicon glyphicon-link about" %></li>
              <li><%= link_to "新規登録", new_end_user_registration_path,class: "glyphicon glyphicon-edit sign_up" %></li>
              <li><%= link_to "ログイン",new_end_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class = "container">
      <div class = "yield">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
